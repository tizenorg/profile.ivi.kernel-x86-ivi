+		internal_lvds_write_reg(pd_context, 0x61254, reg_value, 0xFFFFFFFF, PD_REG_MIO);
+
+		/* set the flag so that we only do this function once */
+		pd_context->pwm_done = 1;
+	}
+#endif
+
