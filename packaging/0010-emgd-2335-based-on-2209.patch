+
+		list_entry = (pd_list_entry_attr_t *)pd_get_attr(p_ctx->p_ch7036_attr_table, p_ctx->ch7036_num_attrs, PD_ATTR_ID_DISPLAY, PD_GET_ATTR_LIST_ENTRY);
