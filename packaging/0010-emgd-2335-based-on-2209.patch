+		} else {
+			/*
+			 * No userspace event; the flip is complete as far as we're
+			 * concerned.  Clear the "in progress of switching to fb" field.
+			 */
+			crtc->newfb = NULL;
+		}
+
+	} else {
+		/* Rendering not complete.  Requeue the work task. */
+		schedule_work(w);
