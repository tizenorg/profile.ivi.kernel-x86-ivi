+
+        if (PVRSRV_OK != psDevInfo->sPVRJTable.pfnPVRSRVRegisterBCDevice(&psDevInfo->sBCJTable,
+                    &(psDevInfo->Device_ID))){
+            return (EMGD_ERROR_DEVICE_REGISTER_FAILED);
