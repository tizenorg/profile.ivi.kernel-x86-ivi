+static int kms_program_port_tnc(emgd_encoder_t *emgd_encoder,
+		unsigned long status)
+{
+	EMGD_TRACE_ENTER;
+
+	if (emgd_encoder->igd_port->port_type == IGD_PORT_LVDS) {
+		EMGD_TRACE_EXIT;
+		return kms_program_port_lvds_tnc(emgd_encoder, status);
