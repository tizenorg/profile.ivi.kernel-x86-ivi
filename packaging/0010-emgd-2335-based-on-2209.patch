+
+
+	I2CWrite(p_ch7xxx_context,0x5B, 0x9E);
+
+	I2CWrite(p_ch7xxx_context,0x5B, 0xB3);
+
+
+	I2CWrite(p_ch7xxx_context,0x03, 0x04);
+
+	I2CWrite(p_ch7xxx_context,0x03, 0x07);
